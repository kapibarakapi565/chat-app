<div class="main_chat">
  <div class="chat_header">
    <div class="group-name">
      <%= @room.name %>
    </div>
    <div class="btn-close">
     <%= link_to "チャットを終了する",room_path(@room), data: { turbo_method: :delete } %> 
      </div>
  </div>
  <div class="chat_center">
    <%= render partial: 'message', collection: @messages %>
  </div>
  <div class="chat_footer">
    <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class:'post_form', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    
      <%= f.submit '送信', class: 'send_button' %> 
    </div>
    <% end %>
  </div>
</div>